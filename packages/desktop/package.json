{
  "name": "@gitswitch/desktop",
  "version": "1.0.0",
  "description": "GitSwitch desktop application",
  "author": "GitSwitch Team",
  "license": "MIT",
  "main": "dist/main.js",
  "homepage": ".",
  "scripts": {
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "webpack --mode=production",
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:renderer": "webpack serve --mode=development",
    "start": "electron dist/main.js",
    "test": "jest --passWithNoTests",
    "clean": "rimraf dist",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "@gitswitch/core": "file:../core",
    "@gitswitch/types": "file:../types"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "buffer": "^6.0.3",
    "concurrently": "^8.0.0",
    "crypto-browserify": "^3.12.1",
    "css-loader": "^6.0.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.0.0",
    "html-webpack-plugin": "^5.0.0",
    "jest": "^29.0.0",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "rimraf": "^5.0.0",
    "stream-browserify": "^3.0.0",
    "style-loader": "^3.0.0",
    "ts-jest": "^29.0.0",
    "ts-loader": "^9.0.0",
    "typescript": "^5.0.0",
    "util": "^0.12.5",
    "webpack": "^5.0.0",
    "webpack-cli": "^5.0.0",
    "webpack-dev-server": "^4.0.0"
  },
  "build": {
    "appId": "com.gitswitch.app",
    "productName": "GitSwitch",
    "copyright": "Copyright Â© 2024 GitSwitch Team",
    "electronVersion": "27.0.0",
    "forceCodeSigning": false,
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "!node_modules/**/test/**/*",
      "!node_modules/**/*.md",
      "!node_modules/**/*.map"
    ],
    "extraResources": [
      {
        "from": "../cli/dist",
        "to": "cli"
      },
      {
        "from": "../core/dist",
        "to": "core"
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "sign": null,
      "certificateFile": null,
      "certificatePassword": null
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
