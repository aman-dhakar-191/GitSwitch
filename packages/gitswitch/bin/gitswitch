#!/usr/bin/env node

/**
 * GitSwitch Global CLI Entry Point
 * Delegates to the actual CLI implementation
 */

const path = require('path');
const { spawn } = require('child_process');

// Find the CLI location
const cliPath = path.join(__dirname, '..', 'lib', 'cli.js');

// Forward all arguments to the CLI tool
const args = process.argv.slice(2);
const child = spawn('node', [cliPath, ...args], {
  stdio: 'inherit',
  cwd: process.cwd()
});

child.on('close', (code) => {
  process.exit(code);
});

child.on('error', (error) => {
  console.error('Failed to start GitSwitch CLI:', error.message);
  console.error('Please try reinstalling GitSwitch: npm install -g gitswitch');
  process.exit(1);
});