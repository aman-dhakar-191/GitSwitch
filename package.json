{
  "name": "gitswitch-workspace",
  "version": "1.0.0",
  "description": "GitSwitch - Git identity management tool",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build:types && npm run build:core && npm run build:cli",
    "build:types": "cd packages/types && npm run build",
    "build:core": "cd packages/core && npm run build",
    "build:cli": "cd packages/cli && npm run build",

    "build:global": "npm run build && cd packages/gitswitch && npm run build",
    "package": "npm run build:global",
    "test": "npm run test --workspaces",
    "dev": "npm run dev --workspaces",
    "clean": "npm run clean --workspaces",
    "lint": "npm run lint --workspaces",
    "test-cli": "node test-cli.js",
    "gitswitch": "node gitswitch.js",
    "setup": "node setup.js",
    "demo": "node demo.js",
    "install-global": "cd packages/gitswitch && npm install -g .",
    "uninstall-global": "npm uninstall -g gitswitch",
    "verify": "node verify-packages.js",
    "release": "node release.js",

    "gulp": "gulp",
    "gulp:build": "gulp build",
    "gulp:build:minified": "gulp build:minified",
    "gulp:build:unminified": "gulp build:unminified",
    "gulp:package": "gulp package",
    "gulp:setup": "gulp setup",
    "gulp:clean": "gulp clean",
    "gulp:dev": "gulp dev",
    "gulp:prod": "gulp prod",
    "gulp:help": "gulp help"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "archiver": "^7.0.1",
    "del": "^8.0.1",
    "gulp": "^5.0.1",
    "gulp-clean-css": "^4.3.0",
    "gulp-if": "^3.0.0",
    "gulp-rename": "^2.1.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-terser": "^2.1.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {}
}
