{
  "name": "gitswitch-workspace",
  "version": "1.0.0",
  "description": "GitSwitch - Git identity management tool",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build:types && npm run build:core && npm run build:cli && npm run build:desktop-main",
    "build:types": "cd packages/types && npm run build",
    "build:core": "cd packages/core && npm run build",
    "build:cli": "cd packages/cli && npm run build",
    "build:desktop-main": "cd packages/desktop && npm run build:main",
    "build:desktop-renderer": "cd packages/desktop && npm run build:renderer",
    "build:desktop": "npm run build:desktop-main && npm run build:desktop-renderer",
    "build:global": "npm run build && cd packages/gitswitch && npm run build",
    "package": "npm run build:global && cd packages/desktop && npm run pack",
    "test": "npm run test --workspaces",
    "dev": "npm run dev --workspaces",
    "clean": "npm run clean --workspaces",
    "lint": "npm run lint --workspaces",
    "test-cli": "node test-cli.js",
    "gitswitch": "node gitswitch.js",
    "setup": "node setup.js",
    "demo": "node demo.js",
    "install-global": "cd packages/gitswitch && npm install -g .",
    "uninstall-global": "npm uninstall -g gitswitch",
    "verify": "node verify-packages.js",
    "release": "node release.js",
    "create-installer": "cd packages/desktop && npm run package-full"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/material": "^7.3.2"
  }
}
